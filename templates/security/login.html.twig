{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <form method="post" class="card bg-base-100 shadow-sm max-w-md mx-auto">
        <div class="card-body">
            {% if error %}
                <div role="alert" class="alert alert-error alert-soft">
                    <span>
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </span>
                </div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <h1 class="card-title">Connexion</h1>

            <label for="username" class="label">Adresse e-mail</label>
            <input type="email" value="{{ last_username }}" name="_username" id="username" class="input w-full" autocomplete="email" required autofocus>

            <div class="flex justify-between">
                <label for="password" class="label">Mot de passe</label>
                <a href="{{ path('app_forgot_password_request') }}">Oublié&nbsp;?</a>
            </div>

            <input type="password" name="_password" id="password" class="input w-full" autocomplete="current-password" required>

            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <input type="checkbox" name="_remember_me" id="_remember_me">
                <label for="_remember_me">Remember me</label>
            </div>
            #}

            <div class="card-actions justify-between">
                <button class="btn btn-primary" type="submit">
                    Se connecter
                </button>
                <a href="{{ path('app_register') }}" class="btn btn-ghost">Créer un compte</a>
            </div>


        </div>

    </form>
{% endblock %}
